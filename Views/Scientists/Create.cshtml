@model scientist.Models.Scientist

@{
    ViewData["Title"] = "Create";
}


<div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-lg-4 col-md-4">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4 col-md-4">
                    <label asp-for="Birthday" class="control-label"></label>
                    <input asp-for="Birthday" class="form-control" type="date" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4 col-md-4">
                    <label asp-for="Cityzenship" class="control-label"></label>
                    <input asp-for="Cityzenship" class="form-control" />
                    <span asp-validation-for="Cityzenship" class="text-danger"></span>
                </div>
            </div>
            <div class=" row">
                <div class="form-group col-lg-4 col-md-4">
                    <label asp-for="Profession" class="control-label"></label>
                    <input asp-for="Profession" class="form-control" />
                    <span asp-validation-for="Profession" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4 col-md-4">
                    <label asp-for="Workplace" class="control-label"></label>
                    <input asp-for="Workplace" class="form-control" />
                    <span asp-validation-for="Workplace" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4 col-md-4">
                    <label asp-for="Livingplace" class="control-label"></label>
                    <input asp-for="Livingplace" class="form-control" />
                    <span asp-validation-for="Livingplace" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class=" form-group col-lg-3 col-md-3">
                    <label asp-for="Degree" class="control-label"></label>
                    <input asp-for="Degree" class="form-control" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-3">
                    <label asp-for="Adress" class="control-label"></label>
                    <input asp-for="Adress" class="form-control" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-3">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-12 col-md-12">
                    <label asp-for="Other" class="control-label"></label>
                    <textarea asp-for="Other" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Other" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Ստեղծել" class="btn btn-success" />
            </div>
        </form>
</div>
<div>
    <a asp-action="Index">Հետ վերադարձ</a>
</div>

